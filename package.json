{
  "name": "@elunic/ecs",
  "version": "0.3.0",
  "description": "The elunic coding styles",
  "files": [
    "commitlint/",
    "editorconfig/",
    "prettier/",
    "tsconfig/",
    "tslint/",
    "eslint/",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "scripts": {
    "check": "prettier --check './**/*.js'",
    "fix": "prettier --write './**/*.js'",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elunic/ecs.git"
  },
  "keywords": [
    "elunic",
    "typescript",
    "tslint",
    "eslint",
    "prettier",
    "commitlint",
    "styles",
    "ecs"
  ],
  "author": {
    "name": "William Hefter",
    "email": "wh@elunic.com"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "@elunic/eslint-config-ecs": "^0.1.2",
    "@elunic/ecs-prettier": "^0.1.2",
    "@elunic/ecs-tsconfig": "^0.1.0",
    "@elunic/ecs-tslint": "^0.1.1",
    "@elunic/ecs-commitlint": "^0.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
